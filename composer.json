{
    "name": "josemmo/verifactu",
    "description": "Implementation of the Spanish VERI*FACTU and SII systems",
    "license": "proprietary",
    "scripts": {
        "lint": "composer validate --strict && phpstan analyse",
        "test": "phpunit --testdox --colors=always tests"
    },
    "autoload": {
        "psr-4": {
            "Verifactu\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Verifactu\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.3",
        "symfony/validator": "^7.3"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12.1"
    }
}
